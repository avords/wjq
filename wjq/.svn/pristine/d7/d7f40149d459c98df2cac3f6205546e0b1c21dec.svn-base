.indexCont5 .tj_ico2 { background: #fff url(../img/home/ind_tsj_pic2.png) no-repeat center; }
.indexCont5 .tj_ico3 { background: #fff url(../img/home/ind_tsj_pic3.png) no-repeat center; }
.indexCont5 .tj_ico4 { background: #fff url(../img/home/ind_tsj_pic4.png) no-repeat center; }
.indexCont5 .tj_ico5 { background: #fff url(../img/home/ind_tsj_pic5.png) no-repeat center; }
.indexCont5 .bd h3 { font-size: 16px; font-weight: normal; padding: 10px 0 10px 30px; }
.indexCont5 .bd p { width: 140px; height: 130px; margin: 0 auto; border: 1px solid #fff; transition: all .3s; }
/* 鍒嗙被甯傚満缇よ嫳浼�*/
.category { float: left; width: 750px; }
.category .title { margin-bottom: 20px; background: #f9f9f9; border-top: 2px solid #4c79b7; }
.category .title span { display: inline-block; padding: 0 20px 0 45px; color: #fff; font-size: 18px; line-height: 40px; background: #4c79b7 url(../img/home/icon_indTit3.png) no-repeat 10px center; }
.category li { float: left; width: 175px; margin-right: 15px; margin-bottom: 20px; }
.category li:nth-child(4n) { margin-right: 0px; }
.category li img { padding: 1px; border: 1px solid #fff; }
.category li a { text-decoration: none; transition: .3s; }
.category li a:hover img { border: 1px solid #f96; transition: .3s; }
.category li h4 { font-size: 18px; line-height: 32px; font-weight: normal; text-align: center; }
.category li p { color: #999; }
/* 璺ㄥ璇惧爞 */
.school { float: right; width: 230px; }
.school .title { padding-left: 40px; border: 1px solid #e5e5e5; border-top: 2px solid #4c79b7; color: #4c79b7; font-size: 18px; line-height: 40px; background: #f9f9f9 url(../img/home/icon_indTit4.png) no-repeat 10px center }
.school .title span { float: right; padding-right: 5px; font-size: 12px; }
.school-cont { height: 500px; border-left: 1px solid #e5e5e5; }
.school-cont a { display: inline-block; width: 50%; height: 25%; margin-left: -1px; margin-right:-3px;border-bottom: 1px solid #e5e5e5; border-right: 1px solid #e5e5e5; text-align: center; font-size: 16px; text-decoration: none; }
.school-cont a:hover { color: #09addb; }
.school-cont i { display: block; width: 36px; height: 40px; margin: 30px auto 0; background: url(../img/home/school_icon.png) no-repeat; }
.school-cont i.icon1 { background-position: 0 0; }
.school-cont i.icon2 { background-position: 0 -50px; }
.school-cont i.icon3 { background-position: 0 -100px; }
.school-cont i.icon4 { background-position: 0 -150px; }
.school-cont i.icon5 { background-position: 0 -200px; }
.school-cont i.icon6 { background-position: 0 -250px; }
.school-cont i.icon7 { background-position: 0 -300px; }
.school-cont i.icon8 { background-position: 0 -350px; }
.school-cont a:hover i.icon1 { background-position: -50px 0; }
.school-cont a:hover i.icon2 { background-position: -50px -50px; }
.school-cont a:hover i.icon3 { background-position: -50px -100px; }
.school-cont a:hover i.icon4 { background-position: -50px -150px; }
.school-cont a:hover i.icon5 { background-position: -50px -200px; }
.school-cont a:hover i.icon6 { background-position: -50px -250px; }
.school-cont a:hover i.icon7 { background-position: -50px -300px; }
.school-cont a:hover i.icon8 { background-position: -50px -350px; }
